{
  "dashboard": {
    "title": "Protocollo Meta Salvage - Overview",
    "uid": "meta-salvage-overview",
    "version": 1,
    "timezone": "utc",
    "tags": ["euystacio", "meta-salvage", "ethics", "monitoring"],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Symbiosis Score",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "symbiosis_score",
            "legendFormat": "Current Score",
            "refId": "A"
          },
          {
            "expr": "symbiosis_score:avg_5m",
            "legendFormat": "5min Average",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Score",
            "min": 0,
            "max": 1
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "type": "lt",
                "params": [0.5]
              },
              "query": {
                "model": {
                  "expr": "symbiosis_score",
                  "refId": "A"
                }
              },
              "type": "query"
            }
          ],
          "name": "Low Symbiosis Score"
        }
      },
      {
        "id": 2,
        "title": "QEK (Quantum Ethical Kernel)",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "qek_value:current",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0.8,
            "max": 1.0,
            "thresholds": {
              "steps": [
                {"value": 0.8, "color": "red"},
                {"value": 0.85, "color": "yellow"},
                {"value": 0.93, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "H-VAR (Harmonic Volatility Ratio)",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "hvar_value:current",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0.0,
            "max": 0.15,
            "thresholds": {
              "steps": [
                {"value": 0.0, "color": "green"},
                {"value": 0.08, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Ethisches Ideal Compliance",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "ethisches_ideal_value:current",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0.9,
            "max": 1.0,
            "thresholds": {
              "steps": [
                {"value": 0.9, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.98, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Risk Events Rate",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "risk_events:rate_5m",
            "legendFormat": "All Events",
            "refId": "A"
          },
          {
            "expr": "risk_events:high_severity_rate",
            "legendFormat": "High Severity",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Events/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "Peace Bonds Policy Status",
        "type": "stat",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "peace_bonds:policy_evaluations_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "TFM-1 Equilibrium Balance",
        "type": "graph",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "equilibrium_balance:current",
            "legendFormat": "Current Balance",
            "refId": "A"
          },
          {
            "expr": "equilibrium_balance:avg_5m",
            "legendFormat": "5min Average",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Balance",
            "min": 0.8,
            "max": 1.0
          }
        ]
      },
      {
        "id": 8,
        "title": "System Availability",
        "type": "graph",
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "service_availability:1h",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Uptime %",
            "min": 0.95,
            "max": 1.0,
            "format": "percentunit"
          }
        ]
      },
      {
        "id": 9,
        "title": "Adaptive Peace Bonds Adjustments",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "peace_bonds:adaptive_adjustments_rate",
            "legendFormat": "Adjustment Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Adjustments/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Alerts Summary",
        "type": "table",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "includeByName": {
                "alertname": true,
                "severity": true,
                "component": true
              }
            }
          }
        ]
      }
    ]
  }
}
